<!-- Üst Pencere Çubuğu -->
<div class="bg-gray-800 text-white flex items-center justify-between p-2 fixed w-full top-0 z-10" style="-webkit-app-region: drag;">
    <div class="ml-auto flex space-x-2">
      <button id="minimize-btn" class="w-8 h-8 bg-gray-700 hover:bg-gray-600 rounded focus:outline-none" style="-webkit-app-region: no-drag;">
        <span class="block w-full h-full flex items-center justify-center">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <rect x="4" y="9" width="12" height="2"></rect>
          </svg>
        </span>
      </button>
      <button id="maximize-btn" class="w-8 h-8 bg-gray-700 hover:bg-gray-600 rounded focus:outline-none" style="-webkit-app-region: no-drag;">
        <span class="block w-full h-full flex items-center justify-center">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"> 
            <rect x="4" y="4" width="12" height="12"></rect>
          </svg>
        </span>
      </button>
      <button id="close-btn" class="w-8 h-8 bg-red-700 hover:bg-red-600 rounded focus:outline-none" style="-webkit-app-region: no-drag;">
        <span class="block w-full h-full flex items-center justify-center">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <line x1="4" y1="4" x2="16" y2="16" stroke="currentColor" stroke-width="2"></line>
            <line x1="4" y1="16" x2="16" y2="4" stroke="currentColor" stroke-width="2"></line>
          </svg>
        </span>
      </button>
    </div>
  </div>