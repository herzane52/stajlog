<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../css/output.css" rel="stylesheet">
  <link href="../css/index.css" rel="stylesheet">
  <!--<script src="https://cdn.tailwindcss.com"></script>-->
</head>
<body class="flex flex-col min-h-screen">

	
	
	<%- include('partials/window') %>
    
    <div class="flex flex-col min-h-screen">
        <main class="flex-grow overflow-y-auto py-4 bg-white dark:bg-gray-900 bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/hero-pattern.svg')] dark:bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/hero-pattern-dark.svg')]">
            <section class="py-16 px-12 mx-auto max-w-screen-xl text-center lg:py-16 overflow-y-auto">
                <div class="px-12 mx-auto max-w-screen-xl text-center lg:py-16">
                    <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Öğrenci Staj Takip Sistemi</h1>
    
                <div class="flex flex-row sm:flex-row sm:justify-center">
                    <div class="bg-white rounded-lg shadow dark:bg-gray-700">
                        <div class="text-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Lütfen Giriş Yapın</h3>
                        </div>
    
                        <div class="px-12 py-4">
                            <!-- Kullanıcı Giriş Formu -->
                            <form id="user-login-form" class="space-y-4" action="/auth/login" method="POST">
                                <div>
                                    <label for="username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Kullanıcı Adı</label>
                                    <input type="text" name="username" id="username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="root" required />
                                </div>
                                <div>
                                    <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Şifre</label>
                                    <input type="password" name="password" id="password" placeholder="root" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required />
                                </div>
                                <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Giriş</button>
                            </form>
                        
                            <!-- Öğrenci Giriş Formu -->
                            <form id="student-login-form" class="space-y-4 hidden" action="/auth/student-login" method="POST">
                                <div>
                                    <label for="tc" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">TC Kimlik No</label>
                                    <input type="text" name="tc" id="tc" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="12345678901" required />
                                </div>
                                <div>
                                    <label for="student-password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Şifre</label>
                                    <input type="password" name="password" id="student-password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="Öğrenci Şifresi" required />
                                </div>
                                <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Öğrenci Giriş</button>
                            </form>
                        
                            <!-- Hata Mesajı -->
                            <% if (error) { %>
                                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert" id="error-message">
                                  <span class="font-medium">Hata!</span> <%= error %>
                                </div>
                                <script>
                                    setTimeout(() => {
                                        const errorMessage = document.getElementById('error-message');
                                        if (errorMessage) {
                                            errorMessage.style.display = 'none';
                                        }
                                    }, 5 * 1000);
                                </script>
                            <% } %>
                        
                            <!-- Giriş Türü Seçimi -->
                            <div class="py-2 mb-4 font-medium text-gray-500 dark:text-gray-300">
                                <a href="#" class="text-blue-700 hover:underline dark:text-blue-500" id="toggle-student-login">Öğrenci Giriş</a>
                            </div>

                        </section>
                        

                        

    


    </main> 


    <script>
        // Öğrenci Girişine tıklanıldığında yetkili giriş metnini değiştirme
        document.getElementById('toggle-student-login').addEventListener('click', function (event) {
            event.preventDefault();
            
            // Öğrenci formunu göster, kullanıcı formunu gizle
            document.getElementById('student-login-form').classList.toggle('hidden');
            document.getElementById('user-login-form').classList.toggle('hidden');
    
            // Buton metnini değiştir
            const toggleText = document.getElementById('toggle-student-login');
            if (toggleText.textContent === 'Öğrenci Giriş') {
                toggleText.textContent = 'Yetkili Giriş';
            } else {
                toggleText.textContent = 'Öğrenci Giriş';
            }
        });
    </script>
<%- include('partials/footer') %>

</body>
</html>